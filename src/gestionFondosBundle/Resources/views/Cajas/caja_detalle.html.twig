{% extends "base.html.twig" %}

{% block title %}Caja diaria{% endblock title %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-md-4">
                <h3 >
                    Detalle
                </h3>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        {% for msg in app.session.flashBag.get('success') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if app.session.flashBag.has('danger') %}
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        {% for msg in app.session.flashBag.get('danger') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
              
        <hr>
        
        <div id="form-no-es-banco">
            {{ form_start(form,{'attr': {'class': 'form-horizontal'}} ) }}
                <div class="form-group">
                    <label class="col-sm-2 control-label">Fecha</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fecha) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Tipo Ingreso</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.tipoIngreso) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Tipo Comp.</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.tipoComprobante) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Nro Comp.</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nroComprobante) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Socio</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.socio) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Descripcion</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.descripcion) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Proveedor</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.proveedor) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Concepto</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoConcepto) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Debe</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.debe) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Haber</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.haber) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Fondo Origen</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fondoOrigen) }}
                    </div>
                </div>

               {{ form_end(form) }}
        </div>
    </div>

    {% block javascripts %}

    <script>
        $(document).ready(function() {
            // configure the bootstrap datepicker
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>

    {% endblock javascripts %}

{% endblock body %}